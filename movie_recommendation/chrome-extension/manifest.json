{
    "manifest_version": 3,
    "name": "Movie Watchlist & Tracker",
    "version": "1.0.0",
    "description": "Fun, animated Chrome extension to track and manage your movie watchlists.",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Open Movie Watchlist"
    },
    "permissions": [
        "storage",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "https://api.themoviedb.org/*",
        "https://*.supabase.co/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://api.themoviedb.org https://*.supabase.co;"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}